<div class="container">
  <div class="card">
    <div class="card-header d-flex align-items-center">
      <h1 class="me-auto h6 mb-0">Experiences</h1>
      <%= link_to new_experience_path do %>
        <i class="fa-solid fa-plus fa-lg"></i>
      <% end %>
    </div>
    <ul id="experiences" class="list-group list-group-flush">
      <% @experiences.each do |experience| %>
        <%= link_to experience, class: "list-group-item d-flex align-items-center" do %>
          <div class="me-auto">
            <div class="badge bg-light text-dark me-2">
              <%= experience.started_at.year %>
              <%= "- #{experience.ended_at.year}" if experience.ended_at.present? && experience.ended_at.year > experience.started_at.year %>
            </div>
            <span class="fw-bold me-2"><%= experience.place %></span>
            <span><%= experience.title %></span>
          </div>
          <div>
            <i class="fa-solid fa-chevron-right fa-fw"></i>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
