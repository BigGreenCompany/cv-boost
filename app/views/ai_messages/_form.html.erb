<%= form_with(model: [@experience, ai_message], data: { controller: "ai-message-form", action: "keydown->ai-message-form#submitOnEnter" }) do |form| %>
  <% if ai_message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(ai_message.errors.count, "error") %> prohibited this ai_message from being saved:</h2>

      <ul>
        <% ai_message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
